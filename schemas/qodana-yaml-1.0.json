{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Qodana YAML 1.0 JSON Schema",
  "$id": "https://raw.githubusercontent.com/JetBrains/qodana-profiles/master/schemas/qodana-yaml-1.0.json",
  "description": "A standard qodana.yaml (or qodana.yml) format for Qodana configuration.",
  "additionalProperties": true,
  "type": "object",
  "properties": {
    "$schema": {
      "description": "The URI of the JSON schema corresponding to the version.",
      "type": "string",
      "format": "uri"
    },
    "version": {
      "description": "The qodana.yaml version of this log file.",
      "enum": [
        "1.0"
      ]
    },
    "profile": {
      "description": "The profile configuration for Qodana analysis.",
      "$ref": "#/definitions/profile"
    },
    "failThreshold": {
      "description": "Number of problems to fail the analysis (to exit from Qodana with code 255).",
      "type": "integer",
      "minimum": 0
    },
    "exclude": {
      "description": "The exclude property to disable the wanted checks on the wanted paths.",
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/exclude"
      }
    },
    "include": {
      "description": "The include property to enable the wanted checks.",
      "type": "array",
      "minItems": 0,
      "items": {
        "$ref": "#/definitions/include"
      }
    }
  },
  "required": [
    "version"
  ],
  "definitions": {
    "profile": {
      "description": "A profile is some template set of checks to run with Qodana analysis.",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "name": {
              "description": "The profile name (embedded or located in the project)",
              "type": "string",
              "examples": [
                "qodana.recommended"
              ]
            }
          },
          "required": [
            "name"
          ],
          "additionalProperties": false
        },
        {
          "properties": {
            "path": {
              "description": "The path to the profile file relative to the project root.",
              "type": "string",
              "examples": [
                ".idea/inspectionProfiles/Default.xml"
              ]
            }
          },
          "required": [
            "path"
          ],
          "additionalProperties": false
        }
      ],
      "additionalProperties": false
    },
    "include": {
      "description": "A check id to enable.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of check to exclude.",
          "type": "string",
          "examples": [
            "Annotator"
          ]
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "exclude": {
      "description": "A check id to disable.",
      "type": "object",
      "properties": {
        "name": {
          "description": "The name of check to exclude.",
          "type": "string",
          "examples": [
            "All",
            "Annotator"
          ]
        },
        "paths": {
          "description": "Relative to the project root path to disable analysis.",
          "type": "array",
          "minItems": 0,
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    }
  }
}